extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.firstName}. Check your Projects below:
					each val in allpostings
						div.signup-wall
							ul.user-details
								li title ---> #{val.title}
								li Description    ---> #{val.description}
								li Posting Date ---> #{val.posting_date.toString()}
							form(class='posting-op', action='/postingManager/deletepost', method='GET')
								input(type='hidden', name='id', class='form-control', value = val._id)
								button(class='btn btn-lg btn-primary btn-block', type='submit') Delete
								
				br
				br
				br
				a(href='/postingManager/createpost', class='btn btn-lg  btn-block')  New Posting
				a(href='/signout', class='btn btn-lg  btn-block') Sign Out